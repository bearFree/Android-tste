<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sunny.fdgfg.TeacherDetailActivity"
    tools:showIn="@layout/activity_teacher_detail">

    <TextView
        android:id="@+id/teacher_desc_textView"
        android:layout_width="368dp"
        android:layout_height="29dp"
        android:textColor="#ff0000"
        android:textSize="16sp"
        android:text="New Text"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/edit_text_1"
        android:layout_width="216dp"
        android:layout_height="40dp"
        android:hint="edit text:type something here"
        android:maxLines="2"
        app:layout_constraintLeft_toRightOf="@+id/button_4"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="30dp"
        app:layout_constraintRight_toRightOf="@+id/teacher_desc_textView"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintBaseline_toBaselineOf="@+id/button_4" />

    <ImageView
        android:id="@+id/teacher_large_imageView"
        android:layout_width="141dp"
        android:layout_height="95dp"
        android:layout_marginTop="48dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/button_4"
        app:srcCompat="@mipmap/mode"
        tools:layout_editor_absoluteX="122dp" />

    <ProgressBar
        android:id="@+id/progress_bar_1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="41dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/teacher_large_imageView"
        tools:layout_editor_absoluteX="33dp" />

    <Button
        android:id="@+id/button_4"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="button"
        android:textAllCaps="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/teacher_desc_textView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/teacher_desc_textView"
        android:layout_marginStart="8dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="120dp"
        android:layout_height="47dp"
        android:text="Switch"
        tools:layout_editor_absoluteX="33dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/progress_bar_1" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/barTitle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="Async"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/teacher_large_imageView"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/progress_bar_1" />

</android.support.constraint.ConstraintLayout>
